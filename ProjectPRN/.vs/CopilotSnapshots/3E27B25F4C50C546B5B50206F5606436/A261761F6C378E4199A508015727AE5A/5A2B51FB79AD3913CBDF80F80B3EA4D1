using System.Configuration;
using System.Data;
using System.Windows;
using ProjectPRN.Utils;

namespace ProjectPRN
{
    /// <summary>
    /// Interaction logic for App.xaml
    /// </summary>
    public partial class App : Application
    {
        protected override async void OnStartup(StartupEventArgs e)
        {
            base.OnStartup(e);

            // Try to restore user session
            await TryRestoreUserSession();
        }

        protected override async void OnExit(ExitEventArgs e)
        {
            // Save application state when exiting
            if (MainWindow != null)
            {
                await StateManager.SaveApplicationStateAsync(MainWindow);
            }

            base.OnExit(e);
        }

        private async Task TryRestoreUserSession()
        {
            try
            {
                var savedSession = await StateManager.LoadUserSessionAsync();
                if (savedSession != null && savedSession.RememberLogin)
                {
                    // TODO: Validate session with database and restore SessionManager
                    // For now, just show that we found a saved session
                    System.Diagnostics.Debug.WriteLine($"Found saved session for: {savedSession.UserName}");
                    
                    // You would need to validate this session with database
                    // and restore the SessionManager state
                }
            }
            catch (Exception ex)
            {
                System.Diagnostics.Debug.WriteLine($"Failed to restore session: {ex.Message}");
            }
        }
    }
}
