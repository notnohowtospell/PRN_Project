<Window x:Class="ProjectPRN.InstructorModule.InstructorMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Instructor Main Window"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen">

    <materialDesign:DialogHost Identifier="InstructorDialogHost">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <materialDesign:Card Grid.Row="0" Margin="0" Padding="16,8" materialDesign:ElevationAssist.Elevation="Dp2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="AccountTie" Width="24" Height="24" Margin="0,0,8,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock Text="Life Skills Course Management - Instructor" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="txtWelcome" Text="Welcome, Instructor" FontWeight="Medium" VerticalAlignment="Center" Margin="0,0,16,0"/>
                        <Button Style="{StaticResource MaterialDesignFlatButton}" Click="BtnProfile_Click" ToolTip="Profile">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Account" Width="16" Height="16" Margin="0,0,4,0"/>
                                <TextBlock Text="Account"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignFlatButton}" Click="BtnLogout_Click" ToolTip="Logout">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Logout" Width="16" Height="16" Margin="0,0,4,0"/>
                                <TextBlock Text="Logout"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Navigation Menu -->
                <materialDesign:Card Grid.Column="0" Margin="0,0,8,0" Padding="8" materialDesign:ElevationAssist.Elevation="Dp2">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="INSTRUCTOR MENU" FontWeight="SemiBold" Margin="16,8" Foreground="{DynamicResource MaterialDesignBodyLight}"/>

                            <!-- Dashboard -->
                            <Button x:Name="btnDashboard" Style="{StaticResource MaterialDesignFlatButton}" 
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" 
                                    Padding="16,12" Margin="4,2" Click="BtnDashboard_Click"
                                    Background="{DynamicResource PrimaryHueLightBrush}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ViewDashboard" Width="20" Height="20" Margin="0,0,12,0"/>
                                    <TextBlock Text="Dashboard" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>

                            <!-- My Courses -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" 
                                    Padding="16,12" Margin="4,2" Click="BtnMyCourses_Click">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="BookOpen" Width="20" Height="20" Margin="0,0,12,0"/>
                                    <TextBlock Text="My Courses" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>

                            <!-- Students -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" 
                                    Padding="16,12" Margin="4,2" Click="BtnStudents_Click">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="AccountGroup" Width="20" Height="20" Margin="0,0,12,0"/>
                                    <TextBlock Text="Students" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>

                            <!-- Assessments -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" 
                                    Padding="16,12" Margin="4,2" Click="BtnAssessments_Click">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ClipboardCheck" Width="20" Height="20" Margin="0,0,12,0"/>
                                    <TextBlock Text="Assessments" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>

                            <!-- Materials -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" 
                                    Padding="16,12" Margin="4,2" Click="BtnMaterials_Click">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FileDocument" Width="20" Height="20" Margin="0,0,12,0"/>
                                    <TextBlock Text="Materials" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>

                            <!-- Schedule -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" 
                                    Padding="16,12" Margin="4,2" Click="BtnSchedule_Click">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Calendar" Width="20" Height="20" Margin="0,0,12,0"/>
                                    <TextBlock Text="Schedule" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>

                            <!-- Feedback -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" 
                                    Padding="16,12" Margin="4,2" Click="BtnFeedback_Click">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="MessageText" Width="20" Height="20" Margin="0,0,12,0"/>
                                    <TextBlock Text="Feedback" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>

                            <!-- Reports -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" 
                                    Padding="16,12" Margin="4,2" Click="BtnReports_Click">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ChartLine" Width="20" Height="20" Margin="0,0,12,0"/>
                                    <TextBlock Text="Reports" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>
                </materialDesign:Card>

                <!-- Content Area -->
                <materialDesign:Card Grid.Column="1" Margin="8,0,0,0" Padding="24" materialDesign:ElevationAssist.Elevation="Dp2">
                    <Grid x:Name="ContentArea">
                        <!-- Dashboard Content -->
                        <StackPanel x:Name="DashboardContent">
                            <TextBlock Text="Instructor Dashboard" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,24"/>
                            
                            <!-- Instructor Stats -->
                            <Grid Margin="0,0,0,24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- My Courses -->
                                <materialDesign:Card Grid.Column="0" Margin="0,0,8,0" Padding="16" Background="{DynamicResource PrimaryHueLightBrush}">
                                    <StackPanel>
                                        <materialDesign:PackIcon Kind="BookOpen" Width="32" Height="32" HorizontalAlignment="Center" Foreground="White"/>
                                        <TextBlock x:Name="txtMyCourses" Text="0" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White"/>
                                        <TextBlock Text="My Courses" HorizontalAlignment="Center" TextWrapping="Wrap" Foreground="White" FontSize="12"/>
                                    </StackPanel>
                                </materialDesign:Card>

                                <!-- Total Students -->
                                <materialDesign:Card Grid.Column="1" Margin="4,0" Padding="16" Background="{DynamicResource SecondaryHueMidBrush}">
                                    <StackPanel>
                                        <materialDesign:PackIcon Kind="AccountGroup" Width="32" Height="32" HorizontalAlignment="Center" Foreground="White"/>
                                        <TextBlock x:Name="txtTotalStudents" Text="0" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White"/>
                                        <TextBlock Text="Students" HorizontalAlignment="Center" TextWrapping="Wrap" Foreground="White" FontSize="12"/>
                                    </StackPanel>
                                </materialDesign:Card>

                                <!-- Active Courses -->
                                <materialDesign:Card Grid.Column="2" Margin="4,0" Padding="16" Background="#FF4CAF50">
                                    <StackPanel>
                                        <materialDesign:PackIcon Kind="Play" Width="32" Height="32" HorizontalAlignment="Center" Foreground="White"/>
                                        <TextBlock x:Name="txtActiveCourses" Text="0" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White"/>
                                        <TextBlock Text="Active Courses" HorizontalAlignment="Center" TextWrapping="Wrap" Foreground="White" FontSize="12"/>
                                    </StackPanel>
                                </materialDesign:Card>

                                <!-- Pending Assessments -->
                                <materialDesign:Card Grid.Column="3" Margin="8,0,0,0" Padding="16" Background="#FFFF9800">
                                    <StackPanel>
                                        <materialDesign:PackIcon Kind="ClipboardCheck" Width="32" Height="32" HorizontalAlignment="Center" Foreground="White"/>
                                        <TextBlock x:Name="txtPendingAssessments" Text="0" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White"/>
                                        <TextBlock Text="Pending Assessments" HorizontalAlignment="Center" TextWrapping="Wrap" Foreground="White" FontSize="12"/>
                                    </StackPanel>
                                </materialDesign:Card>
                            </Grid>

                            <!-- Recent Activities -->
                            <TextBlock Text="Recent Activities" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>
                            <materialDesign:Card Padding="16" Background="#FFF8F8F8" MaxHeight="200">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <StackPanel x:Name="RecentActivities">
                                        <TextBlock Text="No recent activities" FontStyle="Italic" Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    </StackPanel>
                                </ScrollViewer>
                            </materialDesign:Card>

                            <!-- Quick Actions -->
                            <TextBlock Text="Quick Actions" FontSize="18" FontWeight="SemiBold" Margin="0,24,0,16"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,8,0">
                                    <Button Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,0,8" Click="BtnMyCourses_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="BookOpen" Width="16" Height="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="View Courses"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,0,8" Click="BtnStudents_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="AccountGroup" Width="16" Height="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="View Students"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignRaisedButton}" Click="BtnAssessments_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="ClipboardCheck" Width="16" Height="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Assessments"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="8,0,0,0">
                                    <Button Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,0,8" Click="BtnMaterials_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="FileDocument" Width="16" Height="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Materials"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,0,8" Click="BtnSchedule_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Calendar" Width="16" Height="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Schedule"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignRaisedButton}" Click="BtnReports_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="ChartLine" Width="16" Height="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Reports"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- Other content panels will be loaded dynamically -->
                        <ContentControl x:Name="DynamicContent" Visibility="Collapsed"/>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- Status Bar -->
            <materialDesign:Card Grid.Row="2" Margin="0" Padding="16,8" materialDesign:ElevationAssist.Elevation="Dp1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="txtStatus" Text="Ready" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" x:Name="txtDateTime" Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='dd/MM/yyyy HH:mm:ss'}" VerticalAlignment="Center"/>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </materialDesign:DialogHost>
</Window>