<Window x:Class="ProjectPRN.NotificationManagement.NotificationInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN.NotificationManagement"
        mc:Ignorable="d"
        Title="Gửi Thông Báo" Height="350" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0 0 0 10">
            <TextBlock Text="{Binding StudentNameDisplay}" FontWeight="Bold" FontSize="14" Foreground="DarkSlateBlue"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0 0 0 10">
            <TextBlock Text="Tiêu đề:"/>
            <TextBox x:Name="TitleTextBox" Margin="0 5 0 10"/>

            <TextBlock Text="Nội dung:"/>
            <TextBox x:Name="ContentTextBox" Height="120" TextWrapping="Wrap" AcceptsReturn="True"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Gửi" Width="80" Margin="0 0 10 0" Click="Send_Click"/>
            <Button Content="Hủy" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
