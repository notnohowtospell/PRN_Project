<Window x:Class="ProjectPRN.NotificationManagement.NotificationManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN.NotificationManagement"
        mc:Ignorable="d"
        Title="Quản lý thông báo" Height="600" Width="850" Background="#FAFAFA">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <!-- Dòng cho DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Nút Quay lại -->
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0 0 0 10" Grid.Row="0" VerticalAlignment="Top">
            <TextBlock Text="Từ ngày:" VerticalAlignment="Center" Margin="0 0 5 0"/>
            <DatePicker x:Name="FromDatePicker" Width="120" Margin="0 0 10 0"/>
            <TextBlock Text="Đến ngày:" VerticalAlignment="Center" Margin="0 0 5 0"/>
            <DatePicker x:Name="ToDatePicker" Width="120" Margin="0 0 10 0"/>
            <Button Content="Lọc" Width="80" Click="FilterByDate_Click"/>
        </StackPanel>

        <!-- DANH SÁCH THÔNG BÁO -->
        <DataGrid x:Name="NotificationDataGrid" Grid.Row="1" AutoGenerateColumns="False"
                  SelectionMode="Single" IsReadOnly="True" SelectionChanged="NotificationDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding NotificationId}" Width="Auto"/>
                <DataGridTextColumn Header="Tiêu đề" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Ngày tạo" Binding="{Binding CreatedDate}" Width="Auto"/>
                <DataGridTextColumn Header="Người nhận" Binding="{Binding Student.StudentName}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- FORM NHẬP -->
        <StackPanel Grid.Row="2" Margin="0 10 0 0" Orientation="Vertical">
            <TextBlock Text="Tiêu đề:"/>
            <TextBox x:Name="TitleTextBox"/>

            <TextBlock Text="Nội dung:" Margin="0 10 0 0"/>
            <TextBox x:Name="ContentTextBox" Height="80" AcceptsReturn="True" TextWrapping="Wrap"/>

            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                <Button Content="Sửa" Width="80" Margin="0 0 10 0" Click="Update_Click"/>
                <Button Content="Xóa" Width="80" Margin="0 0 10 0" Click="Delete_Click"/>
                <Button Content="Làm mới" Width="100" Click="ClearForm"/>
            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
                <Button Content="Quay lại" Width="100" Click="BackButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
