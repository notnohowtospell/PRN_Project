<Window x:Class="ProjectPRN.CourseMaterialManagement.CourseMaterialManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN.CourseMaterialManagement"
        mc:Ignorable="d"
        Title="Quản lý tài liệu khóa học" Height="600" Width="900" Background="#FAFAFA">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Nút quay lại mới -->
        </Grid.RowDefinitions>
        

        <!-- Bộ lọc -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 10" VerticalAlignment="Center" HorizontalAlignment="Stretch">
            <TextBlock Text="Khóa học: " VerticalAlignment="Center"/>
            <ComboBox x:Name="CourseFilterComboBox" Width="200" DisplayMemberPath="CourseName" SelectedValuePath="CourseId"
                      SelectionChanged="CourseFilterComboBox_SelectionChanged" Margin="5 0"/>

            <TextBlock Text="Tìm tiêu đề: " Margin="20 0 5 0" VerticalAlignment="Center"/>
            <TextBox x:Name="SearchTextBox" Width="200" TextChanged="SearchTextBox_TextChanged"/>
        </StackPanel>

        <!-- Danh sách tài liệu -->
        <DataGrid x:Name="CourseMaterialDataGrid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                  SelectionMode="Single" Margin="0 0 0 10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding MaterialId}" Width="50"/>
                <DataGridTextColumn Header="Tiêu đề" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Tệp" Binding="{Binding FilePath}" Width="200"/>
                <DataGridTextColumn Header="Ngày tải lên" Binding="{Binding UploadDate}" Width="150"/>
                <DataGridTextColumn Header="Khóa học" Binding="{Binding Course.CourseName}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Các nút thao tác -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
            <!--<Button Content="Tải lên" Width="100" Margin="5" Click="UploadButton_Click"/>-->
            <Button Content="Tải xuống" Width="100" Margin="5" Click="DownloadButton_Click"/>
            <Button x:Name="AddButton" Content="Thêm" Width="100" Margin="5" Click="AddButton_Click"/>
            <Button x:Name="EditButton" Content="Sửa" Width="100" Margin="5" Click="EditButton_Click"/>
            <Button x:Name="DeleteButton" Content="Xóa" Width="100" Margin="5" Click="DeleteButton_Click"/>
        </StackPanel>
        <!-- Nút Quay lại ở cuối -->
        <Button Content="Quay lại" Width="100" Margin="10" Grid.Row="3"
        HorizontalAlignment="Left" Click="BackButton_Click"/>
    </Grid>

</Window>
