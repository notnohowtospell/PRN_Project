<Window x:Class="ProjectPRN.Admin.CourseManagement.CourseManagementView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Quản lý khóa học - Life Skill Course Management System"
        Height="800"
        Width="1400"
        MinHeight="600"
        MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <materialDesign:DialogHost Identifier="RootDialog">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <materialDesign:Card Grid.Row="0" Margin="0,0,0,16" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Quản lý khóa học" 
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                               Margin="0,0,0,8"/>
                        <TextBlock Text="Tạo, chỉnh sửa và quản lý các khóa học kỹ năng sống"
                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                               Opacity="0.7"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                        Name="btnAddCourse"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="20"
                        Height="40"
                        Padding="20,0"
                        Click="BtnAddCourse_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="THÊM KHÓA HỌC" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </Grid>
            </materialDesign:Card>

            <!-- Search and Filter -->
            <materialDesign:Card Grid.Row="1" Margin="0,0,0,16" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                         Name="txtSearch"
                         materialDesign:HintAssist.Hint="Tìm kiếm khóa học..."
                         materialDesign:HintAssist.IsFloating="True"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,16,0"
                         TextChanged="TxtSearch_TextChanged">
                        <TextBox.Resources>
                            <Style TargetType="materialDesign:SmartHint" BasedOn="{StaticResource {x:Type materialDesign:SmartHint}}">
                                <Setter Property="UseFloating" Value="True"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <ComboBox Grid.Column="1"
                          Name="cmbInstructorFilter"
                          materialDesign:HintAssist.Hint="Giảng viên"
                          materialDesign:HintAssist.IsFloating="True"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          SelectionChanged="CmbInstructorFilter_SelectionChanged">
                        <ComboBoxItem Content="Tất cả giảng viên"/>
                    </ComboBox>
                    <ComboBox Grid.Column="2"
                          Name="cmbStatusFilter"
                          materialDesign:HintAssist.Hint="Trạng thái"
                          materialDesign:HintAssist.IsFloating="True"
                          Margin="16,0,16,0"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          SelectionChanged="CmbStatusFilter_SelectionChanged">
                        <ComboBoxItem Content="Tất cả"/>
                        <ComboBoxItem Content="Mở đăng ký"/>
                        <ComboBoxItem Content="Đã đóng"/>
                        <ComboBoxItem Content="Tạm dừng"/>
                    </ComboBox>
                    <Button Grid.Column="3"
                        Name="btnClearFilters"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        ToolTip="Xóa tất cả bộ lọc"
                        Click="BtnClearFilters_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FilterRemove" 
                                                 Width="20" Height="20"
                                                 VerticalAlignment="Center" 
                                                 Margin="0,0,8,0"/>
                            <TextBlock Text="XÓA BỘ LỌC" 
                                   VerticalAlignment="Center"
                                   Style="{StaticResource MaterialDesignButtonTextBlock}"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </materialDesign:Card>

            <!-- Course List -->
            <materialDesign:Card Grid.Row="2" Padding="0">
                <DataGrid Name="dgCourses"
                      Style="{StaticResource MaterialDesignDataGrid}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="{DynamicResource MaterialDesignDivider}"
                      SelectionChanged="DgCourses_SelectionChanged">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" 
                                        Binding="{Binding CourseId}" 
                                        Width="60"
                                        IsReadOnly="True"/>

                        <DataGridTextColumn Header="Tên khóa học" 
                                        Binding="{Binding CourseName}" 
                                        Width="*"
                                        MinWidth="100"/>

                        <DataGridTextColumn Header="Giảng viên" 
                                        Binding="{Binding Instructor.InstructorName}" 
                                        Width="150"/>

                        <DataGridTextColumn Header="Ngày bắt đầu" 
                                        Binding="{Binding StartDate, StringFormat=dd/MM/yyyy}" 
                                        Width="120"/>

                        <DataGridTextColumn Header="Ngày kết thúc" 
                                        Binding="{Binding EndDate, StringFormat=dd/MM/yyyy}" 
                                        Width="120"/>

                        <DataGridTextColumn Header="Học phí" 
                                        Binding="{Binding Price, StringFormat=C0}" 
                                        Width="100"/>

                        <DataGridTextColumn Header="Số lượng tối đa" 
                                        Binding="{Binding MaxStudents}" 
                                        Width="100"/>

                        <DataGridTextColumn Header="Trạng thái" 
                                        Binding="{Binding Status}" 
                                        Width="100">
                            <DataGridTextColumn.CellStyle>
                                <Style TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Status}" Value="Đang mở">
                                            <Setter Property="Foreground" Value="Green"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Đã đóng">
                                            <Setter Property="Foreground" Value="Red"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Tạm dừng">
                                            <Setter Property="Foreground" Value="Orange"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.CellStyle>
                        </DataGridTextColumn>

                        <DataGridTemplateColumn Header="Thao tác" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                            Height="30" Width="30"
                                            Margin="2"
                                            ToolTip="Chỉnh sửa"
                                            Click="BtnEdit_Click"
                                            Tag="{Binding CourseId}">
                                            <materialDesign:PackIcon Kind="Edit" Width="16" Height="16"/>
                                        </Button>
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                            Height="30" Width="30"
                                            Margin="2"
                                            ToolTip="Xóa"
                                            Click="BtnDelete_Click"
                                            Tag="{Binding CourseId}"
                                            Foreground="{DynamicResource MaterialDesignValidationErrorBrush}">
                                            <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </materialDesign:Card>

            <!-- Status Bar -->
            <materialDesign:Card Grid.Row="3" Margin="0,16,0,0" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                           Name="txtStatus"
                           Text="Sẵn sàng"
                           VerticalAlignment="Center"
                           Style="{StaticResource MaterialDesignBody2TextBlock}"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="Tổng số khóa học: "
                               VerticalAlignment="Center"
                               Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                        <TextBlock Name="txtTotalCourses"
                               Text="0"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
    </Grid>
    </materialDesign:DialogHost>

</Window>