<Window x:Class="ProjectPRN.AssessmentManagement.AddAssessmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN.AssessmentManagement"
        mc:Ignorable="d"
        Title="Thêm bài kiểm tra" Height="680" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#FAFAFA" Loaded="Window_Loaded">
    <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Padding="20" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Tiêu đề -->
            <TextBlock x:Name="TitleTextBlock" Text="Thêm bài kiểm tra" FontSize="22" FontWeight="Bold"
                   Foreground="#2E7D32" HorizontalAlignment="Center" Margin="0 0 0 20"/>

            <!-- Nội dung nhập liệu -->
            <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="0 0 0 10">

                <TextBlock Text="Khóa học:" Margin="0 5"/>
                <ComboBox x:Name="cbCourse" Margin="0 0 0 10"
                      DisplayMemberPath="CourseName"
                      SelectedValuePath="CourseId"
                      SelectedIndex="0"/>

                <TextBlock Text="Tên bài kiểm tra:" Margin="0 5"/>
                <TextBox x:Name="txtName" Margin="0 0 0 10"/>

                <TextBlock Text="Loại bài:" Margin="0 5"/>
                <TextBox x:Name="txtType" Margin="0 0 0 10"/>

                <TextBlock Text="Điểm tối đa:" Margin="0 5"/>
                <TextBox x:Name="txtMaxScore" Margin="0 0 0 10"/>

                <TextBlock Text="Hạn nộp:" Margin="0 5"/>
                <DatePicker x:Name="dpDueDate" Margin="0 0 0 10"/>

                <TextBlock Text="Hướng dẫn:" Margin="0 5"/>
                <TextBox x:Name="txtInstructions" AcceptsReturn="True" Height="60"
                     VerticalScrollBarVisibility="Auto"/>
                <TextBlock Text="File hướng dẫn:" Margin="0 10 0 5"/>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                    <TextBox x:Name="txtFilePath" IsReadOnly="True" Width="300"/>
                    <Button Content="Chọn file" Width="100" Margin="10 0 0 0" Click="BtnChooseFile_Click"/>
                </StackPanel>
            </StackPanel>

            <!-- Nút hành động -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
                <Button Content="Lưu" Width="90" Height="30" Margin="0 0 10 0"
                    Background="#4CAF50" Foreground="White" FontWeight="Bold" Click="Save_Click"/>
                <Button Content="Hủy" Width="90" Height="30" Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
