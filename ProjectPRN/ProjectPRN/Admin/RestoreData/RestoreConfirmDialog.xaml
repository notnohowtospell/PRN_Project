<UserControl x:Class="ProjectPRN.Admin.BackupRestore.RestoreConfirmDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}">

    <materialDesign:Card Width="500" MaxHeight="600">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24">
                <!-- Dialog Header -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:PackIcon Grid.Column="0"
                                           Kind="AlertCircle"
                                           Width="32"
                                           Height="32"
 
                                           VerticalAlignment="Center"
                                           Margin="0,0,16,0"/>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Xac nhan phuc hoi du lieu"
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="Thao tac nay khong the hoan tac"/>

                    </StackPanel>

                    <Button Grid.Column="2"

                            Click="BtnClose_Click"
                            ToolTip="Dong">
                        <materialDesign:PackIcon Kind="Close"/>
                    </Button>
                </Grid>

                <!-- Backup Information -->
                <materialDesign:Card 
                                   Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Thong tin file sao luu"

                                   Margin="0,0,0,12"
                                   FontWeight="Bold"/>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Ngay tao:" FontWeight="Bold" Margin="0,0,16,8"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Name="txtBackupDate" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Phien ban:" FontWeight="Bold" Margin="0,0,16,8"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Name="txtVersion" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Hoc vien:" FontWeight="Bold" Margin="0,0,16,8"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Name="txtStudentCount" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Giang vien:" FontWeight="Bold" Margin="0,0,16,8"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Name="txtInstructorCount" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Khoa hoc:" FontWeight="Bold" Margin="0,0,16,0"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Name="txtCourseCount"/>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Warning Messages -->
                <materialDesign:Card 
                                   Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="CANH BAO QUAN TRONG"
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                   Margin="0,0,0,12"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        
                        <TextBlock Foreground="White" TextWrapping="Wrap" Margin="0,0,0,8">
                            <Run Text="* "/>
                            <Run Text="Toan bo du lieu hien tai se bi ghi de" FontWeight="Bold"/>
                        </TextBlock>
                        
                        <TextBlock Foreground="White" TextWrapping="Wrap" Margin="0,0,0,8">
                            <Run Text="* "/>
                            <Run Text="Thao tac khong the hoan tac sau khi thuc hien" FontWeight="Bold"/>
                        </TextBlock>
                        
                        <TextBlock Foreground="White" TextWrapping="Wrap" Margin="0,0,0,8">
                            <Run Text="* "/>
                            <Run Text="Tat ca mat khau can duoc reset" FontWeight="Bold"/>
                        </TextBlock>
                        
                        <TextBlock Foreground="White" TextWrapping="Wrap">
                            <Run Text="* "/>
                            <Run Text="Khuyen nghi tao ban sao luu hien tai truoc khi tiep tuc" FontWeight="Bold"/>
                        </TextBlock>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Confirmation Checkbox -->
                <CheckBox Name="chkConfirm" 
                          Margin="0,0,0,24"
                          Checked="ChkConfirm_Checked"
                          Unchecked="ChkConfirm_Unchecked">
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="Toi hieu rang thao tac nay se ghi de toan bo du lieu hien tai va khong the hoan tac. Toi da tao ban sao luu du lieu hien tai." FontWeight="Bold"/>
                    </TextBlock>
                </CheckBox>

                <!-- Action Buttons -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="1"
                            Name="btnCancel"
                            Content="HUY BO"
                            Margin="0,0,8,0"
                            Width="100"
                            Click="BtnCancel_Click"/>

                    <Button Grid.Column="2"
                            Name="btnConfirm"
                            Content="PHUC HOI"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Width="100"
                            IsEnabled="False"
                            Click="BtnConfirm_Click"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </materialDesign:Card>
</UserControl>