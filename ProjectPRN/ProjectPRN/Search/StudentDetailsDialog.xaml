<UserControl x:Class="ProjectPRN.Search.StudentDetailsDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}">

    <materialDesign:Card Width="700" MaxHeight="800">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24">
                <!-- Dialog Header -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Chi tiết sinh viên"
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="Thông tin đầy đủ về sinh viên"
                                   Style="{StaticResource MaterialDesignBody2TextBlock}"
                                   Opacity="0.7"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Click="BtnClose_Click"
                            ToolTip="Đóng">
                        <materialDesign:PackIcon Kind="Close"/>
                    </Button>
                </Grid>

                <!-- Student Avatar and Name -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Avatar -->
                    <materialDesign:Card Grid.Column="0" 
                                         Width="80" Height="80"
                                         Background="{DynamicResource PrimaryHueMidBrush}"
                                         Margin="0,0,16,0">
                        <TextBlock Name="txtAvatarInitials"
                                   Text="SV"
                                   Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"/>
                    </materialDesign:Card>

                    <!-- Name and Basic Info -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Name="txtStudentName"
                                   Text="Tên sinh viên"
                                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                   Foreground="{DynamicResource PrimaryHueMidBrush}"
                                   FontWeight="Bold"/>
                        <TextBlock Name="txtStudentCode"
                                   Text="Mã sinh viên: SV001"
                                   Style="{StaticResource MaterialDesignBody1TextBlock}"
                                   Opacity="0.7"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Status Badge -->
                    <materialDesign:Card Grid.Column="2" 
                                         Name="cardStatus"
                                         Padding="12,6"
                                         Background="Green"
                                         VerticalAlignment="Center">
                        <TextBlock Name="txtStatus"
                                   Text="Đang học"
                                   Foreground="White"
                                   FontWeight="Bold"/>
                    </materialDesign:Card>
                </Grid>

                <!-- Information Cards -->
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Personal Info Card -->
                    <materialDesign:Card Grid.Column="0" Padding="16">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <materialDesign:PackIcon Kind="AccountCircle" 
                                                         VerticalAlignment="Center"
                                                         Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                         Margin="0,0,8,0"/>
                                <TextBlock Text="THÔNG TIN CÁ NHÂN"
                                           Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                            </StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <materialDesign:PackIcon Grid.Row="0" Grid.Column="0" Kind="Email" 
                                                         Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <StackPanel Grid.Row="0" Grid.Column="1">
                                    <TextBlock Text="Email" Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                                    <TextBlock Name="txtEmail" FontWeight="SemiBold"/>
                                </StackPanel>

                                <materialDesign:PackIcon Grid.Row="1" Grid.Column="0" Kind="Phone" 
                                                         Margin="0,8,8,0" VerticalAlignment="Center"/>
                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,8,0,0">
                                    <TextBlock Text="Số điện thoại" Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                                    <TextBlock Name="txtPhoneNumber" FontWeight="SemiBold"/>
                                </StackPanel>

                                <materialDesign:PackIcon Grid.Row="2" Grid.Column="0" Kind="Calendar" 
                                                         Margin="0,8,8,0" VerticalAlignment="Center"/>
                                <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,8,0,0">
                                    <TextBlock Text="Ngày sinh" Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                                    <TextBlock Name="txtDateOfBirth" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Statistics Card -->
                    <materialDesign:Card Grid.Column="2" Padding="16">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <materialDesign:PackIcon Kind="ChartLine" 
                                                         VerticalAlignment="Center"
                                                         Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                         Margin="0,0,8,0"/>
                                <TextBlock Text="THỐNG KÊ HỌC TẬP"
                                           Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                            </StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center">
                                    <TextBlock Name="txtTotalCourses" 
                                               Text="3"
                                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                               HorizontalAlignment="Center"
                                               Foreground="{DynamicResource PrimaryHueMidBrush}"
                                               FontWeight="Bold"/>
                                    <TextBlock Text="Khóa học"
                                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center">
                                    <TextBlock Name="txtCompletedCourses" 
                                               Text="1"
                                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                               HorizontalAlignment="Center"
                                               Foreground="Green"
                                               FontWeight="Bold"/>
                                    <TextBlock Text="Hoàn thành"
                                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Margin="0,16,0,0">
                                    <TextBlock Name="txtPendingPayments" 
                                               Text="1"
                                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                               HorizontalAlignment="Center"
                                               Foreground="Orange"
                                               FontWeight="Bold"/>
                                    <TextBlock Text="Chờ thanh toán"
                                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Margin="0,16,0,0">
                                    <TextBlock Name="txtTotalPayments" 
                                               Text="2,500,000"
                                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                               HorizontalAlignment="Center"
                                               Foreground="{DynamicResource PrimaryHueMidBrush}"
                                               FontWeight="Bold"/>
                                    <TextBlock Text="Tổng học phí (VNĐ)"
                                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>

                <!-- Enrolled Courses -->
                <materialDesign:Card Margin="0,0,0,16" Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <materialDesign:PackIcon Kind="BookOpen" 
                                                     VerticalAlignment="Center"
                                                     Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                     Margin="0,0,8,0"/>
                            <TextBlock Text="KHÓA HỌC ĐANG THAM GIA"
                                       Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                       Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        </StackPanel>

                        <DataGrid Name="dgCourses"
                                  Style="{StaticResource MaterialDesignDataGrid}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  SelectionMode="Single"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  MaxHeight="200">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Tên khóa học" 
                                                    Binding="{Binding CourseName}" 
                                                    Width="*"/>

                                <DataGridTextColumn Header="Giảng viên" 
                                                    Binding="{Binding InstructorName}" 
                                                    Width="150"/>

                                <DataGridTextColumn Header="Trạng thái" 
                                                    Binding="{Binding EnrollmentStatus}" 
                                                    Width="120"/>

                                <DataGridTextColumn Header="Thanh toán" 
                                                    Binding="{Binding PaymentStatus}" 
                                                    Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <TextBlock Name="txtNoCoursesMessage"
                                   Text="Sinh viên chưa đăng ký khóa học nào."
                                   HorizontalAlignment="Center"
                                   Margin="0,20,0,0"
                                   Style="{StaticResource MaterialDesignBody2TextBlock}"
                                   Opacity="0.7"
                                   Visibility="Collapsed"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Payment History -->
                <materialDesign:Card Margin="0,0,0,16" Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <materialDesign:PackIcon Kind="CreditCard" 
                                                     VerticalAlignment="Center"
                                                     Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                     Margin="0,0,8,0"/>
                            <TextBlock Text="LỊCH SỬ THANH TOÁN"
                                       Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                       Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        </StackPanel>

                        <DataGrid Name="dgPayments"
                                  Style="{StaticResource MaterialDesignDataGrid}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  SelectionMode="Single"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  MaxHeight="200">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Khóa học" 
                                                    Binding="{Binding CourseName}" 
                                                    Width="*"/>

                                <DataGridTextColumn Header="Số tiền" 
                                                    Binding="{Binding Amount, StringFormat=C0}" 
                                                    Width="120"/>

                                <DataGridTextColumn Header="Ngày thanh toán" 
                                                    Binding="{Binding PaymentDate, StringFormat=dd/MM/yyyy}" 
                                                    Width="120"/>

                                <DataGridTextColumn Header="Trạng thái" 
                                                    Binding="{Binding Status}" 
                                                    Width="120">
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Đã thanh toán">
                                                    <Setter Property="Foreground" Value="Green"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                    <Setter Property="Foreground" Value="Orange"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <TextBlock Name="txtNoPaymentsMessage"
                                   Text="Không có lịch sử thanh toán."
                                   HorizontalAlignment="Center"
                                   Margin="0,20,0,0"
                                   Style="{StaticResource MaterialDesignBody2TextBlock}"
                                   Opacity="0.7"
                                   Visibility="Collapsed"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Action Buttons -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="2"
                            Name="btnClose"
                            Content="ĐÓNG"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,8,0"
                            Width="100"
                            Click="BtnClose_Click"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </materialDesign:Card>
</UserControl>