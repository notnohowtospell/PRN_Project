<Window x:Class="ProjectPRN.Search.StudentSearchView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Tìm kiếm sinh viên - Life Skill Course Management System"
        Height="800"
        Width="1400"
        MinHeight="600"
        MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <materialDesign:DialogHost Identifier="RootDialog">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <materialDesign:Card Grid.Row="0" Margin="0,0,0,16" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Tìm kiếm sinh viên" 
                                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Tìm kiếm và lọc thông tin sinh viên trong hệ thống"
                                   Style="{StaticResource MaterialDesignBody2TextBlock}"
                                   Opacity="0.7"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- Search and Filter -->
            <materialDesign:Card Grid.Row="1" Margin="0,0,0,16" Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- First Row: Search and Status Filter -->
                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 Name="txtSearch"
                                 materialDesign:HintAssist.Hint="Tìm kiếm sinh viên (tên, email, mã sinh viên)..."
                                 materialDesign:HintAssist.IsFloating="True"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,16,0"
                                 TextChanged="TxtSearch_TextChanged">
                        </TextBox>

                        <ComboBox Grid.Column="1"
                                  Name="cmbStatusFilter"
                                  materialDesign:HintAssist.Hint="Trạng thái"
                                  materialDesign:HintAssist.IsFloating="True"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  Margin="0,0,16,0"
                                  SelectionChanged="CmbStatusFilter_SelectionChanged">
                            <ComboBoxItem Content="Tất cả trạng thái"/>
                            <ComboBoxItem Content="Active"/>
                            <ComboBoxItem Content="Inactive"/>
                        </ComboBox>

                        <ComboBox Grid.Column="2"
                                  Name="cmbEnrollmentFilter"
                                  materialDesign:HintAssist.Hint="Tình trạng đăng ký"
                                  materialDesign:HintAssist.IsFloating="True"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  Margin="0,0,16,0"
                                  SelectionChanged="CmbEnrollmentFilter_SelectionChanged">
                            <ComboBoxItem Content="Tất cả"/>
                            <ComboBoxItem Content="Có khóa học"/>
                            <ComboBoxItem Content="Không có khóa học"/>
                            <ComboBoxItem Content="Đang chờ thanh toán"/>
                        </ComboBox>

                        <Button Grid.Column="3"
                                Name="btnClearFilters"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                ToolTip="Xóa tất cả bộ lọc"
                                Click="BtnClearFilters_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FilterRemove" 
                                                         Width="20" Height="20"
                                                         VerticalAlignment="Center" 
                                                         Margin="0,0,8,0"/>
                                <TextBlock Text="XÓA BỘ LỌC" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- Second Row: Advanced Filters -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <DatePicker Grid.Column="0"
                                    Name="dpDateFrom"
                                    materialDesign:HintAssist.Hint="Ngày đăng ký từ"
                                    materialDesign:HintAssist.IsFloating="True"
                                    Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                    Margin="0,0,16,0"
                                    SelectedDateChanged="DateFilter_Changed"/>

                        <DatePicker Grid.Column="1"
                                    Name="dpDateTo"
                                    materialDesign:HintAssist.Hint="Ngày đăng ký đến"
                                    materialDesign:HintAssist.IsFloating="True"
                                    Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                    Margin="0,0,16,0"
                                    SelectedDateChanged="DateFilter_Changed"/>

                        <ComboBox Grid.Column="2"
                                  Name="cmbCourseFilter"
                                  materialDesign:HintAssist.Hint="Khóa học"
                                  materialDesign:HintAssist.IsFloating="True"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  Margin="0,0,16,0"
                                  SelectionChanged="CmbCourseFilter_SelectionChanged">
                            <ComboBoxItem Content="Tất cả khóa học"/>
                        </ComboBox>

                        <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="Tìm thấy: "
                                       VerticalAlignment="Center"
                                       Margin="0,0,4,0"/>
                            <TextBlock Name="txtResultCount"
                                       Text="0"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                            <TextBlock Text=" sinh viên"
                                       VerticalAlignment="Center"
                                       Margin="4,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </materialDesign:Card>

            <!-- Student List -->
            <materialDesign:Card Grid.Row="2" Padding="0">
                <DataGrid Name="dgStudents"
                          Style="{StaticResource MaterialDesignDataGrid}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="{DynamicResource MaterialDesignDivider}"
                          SelectionChanged="DgStudents_SelectionChanged">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã SV" 
                                            Binding="{Binding StudentCode}" 
                                            Width="150"/>

                        <DataGridTextColumn Header="Họ tên" 
                                            Binding="{Binding StudentName}" 
                                            Width="*"
                                            MinWidth="150"/>

                        <DataGridTextColumn Header="Email" 
                                            Binding="{Binding Email}" 
                                            Width="*"/>

                        <DataGridTextColumn Header="Số điện thoại" 
                                            Binding="{Binding PhoneNumber}" 
                                            Width="130"/>

                        <DataGridTextColumn Header="Ngày sinh" 
                                            Binding="{Binding DateOfBirth, StringFormat=dd/MM/yyyy}" 
                                            Width="130"/>

                        <DataGridTextColumn Header="Trạng thái" 
                                            Binding="{Binding Status}" 
                                            Width="130">
                            <DataGridTextColumn.CellStyle>
                                <Style TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Status}" Value="Đang học">
                                            <Setter Property="Foreground" Value="Green"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Tạm nghỉ">
                                            <Setter Property="Foreground" Value="Orange"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Ngưng học">
                                            <Setter Property="Foreground" Value="Red"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Đã hoàn thành">
                                            <Setter Property="Foreground" Value="Blue"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.CellStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Số khóa học" 
                                            Binding="{Binding EnrollmentCount}" 
                                            Width="130"/>

                        <DataGridTextColumn Header="Ngày đăng ký" 
                                            Binding="{Binding RegistrationDate, StringFormat=dd/MM/yyyy}" 
                                            Width="120"/>

                        <DataGridTemplateColumn Header="Thao tác" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                                Height="30" Width="30"
                                                Margin="2"
                                                ToolTip="Xem chi tiết"
                                                Click="BtnViewDetails_Click"
                                                Tag="{Binding StudentId}">
                                            <materialDesign:PackIcon Kind="Eye" Width="16" Height="16"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </materialDesign:Card>

            <!-- Status Bar -->
            <materialDesign:Card Grid.Row="3" Margin="0,16,0,0" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Name="txtStatus"
                               Text="Sẵn sàng"
                               VerticalAlignment="Center"
                               Style="{StaticResource MaterialDesignBody2TextBlock}"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="Tổng số sinh viên: "
                                   VerticalAlignment="Center"
                                   Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                        <TextBlock Name="txtTotalStudents"
                                   Text="0"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </materialDesign:DialogHost>
</Window>
