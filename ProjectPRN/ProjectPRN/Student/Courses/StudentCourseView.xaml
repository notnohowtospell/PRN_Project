<Window x:Class="ProjectPRN.Student.Courses.StudentCourseView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Khóa học kỹ năng sống - Student Portal"
        Height="800"
        Width="1400"
        MinHeight="600"
        MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <materialDesign:DialogHost Identifier="RootDialog">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <materialDesign:Card Grid.Row="0" Margin="0,0,0,16" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Khóa học kỹ năng sống" 
                                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Khám phá và đăng ký các khóa học phát triển bản thân"
                                   Style="{StaticResource MaterialDesignBody2TextBlock}"
                                   Opacity="0.7"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Name="btnMyEnrollments"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Margin="0,0,8,0"
                                Height="40"
                                Padding="16,0"
                                Click="BtnMyEnrollments_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="BookOpen" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="KHÓA HỌC CỦA TÔI" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Name="btnProfile"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Height="40"
                                Padding="16,0"
                                Click="BtnProfile_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Account" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Name="txtStudentName" Text="HỒ SƠ" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- Search and Filter -->
            <materialDesign:Card Grid.Row="1" Margin="0,0,0,16" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             Name="txtSearch"
                             materialDesign:HintAssist.Hint="Tìm kiếm khóa học..."
                             materialDesign:HintAssist.IsFloating="True"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,16,0"
                             TextChanged="TxtSearch_TextChanged">
                    </TextBox>

                    <ComboBox Grid.Column="1"
                              Name="cmbInstructorFilter"
                              materialDesign:HintAssist.Hint="Giảng viên"
                              materialDesign:HintAssist.IsFloating="True"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Margin="0,0,16,0"
                              SelectionChanged="CmbInstructorFilter_SelectionChanged">
                        <ComboBoxItem Content="Tất cả giảng viên"/>
                    </ComboBox>

                    <ComboBox Grid.Column="2"
                              Name="cmbStatusFilter"
                              materialDesign:HintAssist.Hint="Trạng thái"
                              materialDesign:HintAssist.IsFloating="True"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Margin="0,0,16,0"
                              SelectionChanged="CmbStatusFilter_SelectionChanged">
                        <ComboBoxItem Content="Tất cả"/>
                        <ComboBoxItem Content="Mở đăng ký"/>
                    </ComboBox>

                    <Button Grid.Column="3"
                            Name="btnClearFilters"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="Xóa tất cả bộ lọc"
                            Click="BtnClearFilters_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FilterRemove" 
                                                     Width="20" Height="20"
                                                     VerticalAlignment="Center" 
                                                     Margin="0,0,8,0"/>
                            <TextBlock Text="XÓA BỘ LỌC" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </materialDesign:Card>

            <!-- Course List -->
            <materialDesign:Card Grid.Row="2" Padding="0">
                <DataGrid Name="dgCourses"
                          Style="{StaticResource MaterialDesignDataGrid}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="{DynamicResource MaterialDesignDivider}"
                          SelectionChanged="DgCourses_SelectionChanged">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Tên khóa học" 
                                            Binding="{Binding CourseName}" 
                                            Width="200"
                                            MinWidth="200"/>

                        <DataGridTextColumn Header="Giảng viên" 
                                            Binding="{Binding Instructor.InstructorName}" 
                                            Width="*"/>

                        <DataGridTextColumn Header="Ngày bắt đầu" 
                                            Binding="{Binding StartDate, StringFormat=dd/MM/yyyy}" 
                                            Width="120"/>

                        <DataGridTextColumn Header="Ngày kết thúc" 
                                            Binding="{Binding EndDate, StringFormat=dd/MM/yyyy}" 
                                            Width="120"/>

                        <DataGridTextColumn Header="Học phí" 
                                            Binding="{Binding Price, StringFormat=N0}" 
                                            Width="120"/>

                        <DataGridTextColumn Header="Số chỗ còn lại" 
                                            Width="120">
                            <DataGridTextColumn.Binding>
                                <MultiBinding StringFormat="{}{0}/{1}">
                                    <Binding Path="CurrentEnrollments"/>
                                    <Binding Path="MaxStudents"/>
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                            <DataGridTextColumn.CellStyle>
                                <Style TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsFullyBooked}" Value="True">
                                            <Setter Property="Foreground" Value="Red"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsAlmostFull}" Value="True">
                                            <Setter Property="Foreground" Value="Orange"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.CellStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Trạng thái" 
                                            Binding="{Binding Status}" 
                                            Width="150">
                            <DataGridTextColumn.CellStyle>
                                <Style TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Status}" Value="Mở đăng ký">
                                            <Setter Property="Foreground" Value="Green"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Đã đóng">
                                            <Setter Property="Foreground" Value="Red"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.CellStyle>
                        </DataGridTextColumn>

                        <DataGridTemplateColumn Header="Thao tác" Width="170">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                                Height="25" Width="25"
                                                Margin="2"
                                                ToolTip="Xem chi tiết"
                                                Click="BtnViewDetails_Click"
                                                Tag="{Binding CourseId}">
                                            <materialDesign:PackIcon Kind="Eye" Width="16" Height="16"/>
                                        </Button>
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                                Height="25" Width="25"
                                                Margin="2"
                                                ToolTip="Đăng ký"
                                                Click="BtnEnroll_Click"
                                                Tag="{Binding CourseId}"
                                                IsEnabled="{Binding CanEnrollAndNotEnrolled}"
                                                Foreground="{DynamicResource PrimaryHueMidBrush}">
                                            <materialDesign:PackIcon Kind="AccountPlus" Width="16" Height="16"/>
                                        </Button>
                                        <TextBlock Text="Đã đăng ký"
                                           Foreground="DarkOrange"
                                           FontStyle="Italic"
                                           FontSize="12"
                                           Margin="6,4,0,0"
                                           VerticalAlignment="Center"
                                           Visibility="{Binding SentRequest, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </materialDesign:Card>

            <!-- Status Bar -->
            <materialDesign:Card Grid.Row="3" Margin="0,16,0,0" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Name="txtStatus"
                               Text="Sẵn sàng"
                               VerticalAlignment="Center"
                               Style="{StaticResource MaterialDesignBody2TextBlock}"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="Tổng số khóa học: "
                                   VerticalAlignment="Center"
                                   Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                        <TextBlock Name="txtTotalCourses"
                                   Text="0"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </materialDesign:DialogHost>
</Window>