<Window x:Class="ProjectPRN.Student.StudentMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Hệ thống quản lý khóa học - Sinh viên" 
        Height="700" 
        Width="1200"
        WindowStartupLocation="CenterScreen">

    <materialDesign:DialogHost Identifier="MainDialogHost">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <materialDesign:Card Grid.Row="0" Margin="0" Padding="16,8" materialDesign:ElevationAssist.Elevation="Dp2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="School" Width="24" Height="24" Margin="0,0,8,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock Text="Hệ thống quản lý khóa học kỹ năng sống" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="txtWelcome" Text="Xin chào, " FontWeight="Medium" VerticalAlignment="Center" Margin="0,0,16,0"/>
                        <Button Style="{StaticResource MaterialDesignFlatButton}" Click="BtnProfile_Click" ToolTip="Thông tin cá nhân">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Account" Width="16" Height="16" Margin="0,0,4,0"/>
                                <TextBlock Text="Tài khoản"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignFlatButton}" Click="BtnLogout_Click" ToolTip="Đăng xuất">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Logout" Width="16" Height="16" Margin="0,0,4,0"/>
                                <TextBlock Text="Đăng xuất"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Navigation Menu -->
                <materialDesign:Card Grid.Column="0" Margin="0,0,8,0" Padding="8" materialDesign:ElevationAssist.Elevation="Dp2">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="MENU CHÍNH" FontWeight="SemiBold" Margin="16,8" Foreground="{DynamicResource MaterialDesignBodyLight}"/>

                            <!-- Dashboard -->
                            <Button x:Name="btnDashboard" Style="{StaticResource MaterialDesignFlatButton}" 
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" 
                                    Padding="16,12" Margin="4,2" Click="BtnDashboard_Click"
                                    Background="{DynamicResource PrimaryHueLightBrush}" Height="39">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ViewDashboard" Width="20" Height="20" Margin="0,0,12,0"/>
                                    <TextBlock Text="Trang chủ" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>

                            <!-- Course Management -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" 
                                    Padding="16,12" Margin="4,2" Click="BtnCourses_Click" Height="40">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="BookOpen" Width="20" Height="20" Margin="0,0,12,0"/>
                                    <TextBlock Text="Khóa học" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>

                            <!-- My Enrollments -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" 
                                    Padding="16,12" Margin="4,2" Click="BtnMyEnrollments_Click" Height="40">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="BookAccount" Width="20" Height="20" Margin="0,0,12,0"/>
                                    <TextBlock Text="Khóa học của tôi" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>

                            <!-- Assessments -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" 
                                    Padding="16,12" Margin="4,2" Click="BtnAssessments_Click" Height="40">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ClipboardCheck" Width="20" Height="20" Margin="0,0,12,0"/>
                                    <TextBlock Text="Bài kiểm tra" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>

                            <!-- Course Materials -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" 
                                    Padding="16,12" Margin="4,2" Click="BtnMaterials_Click" Height="40">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FileDocument" Width="20" Height="20" Margin="0,0,12,0"/>
                                    <TextBlock Text="Tài liệu học tập" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>

                            <!-- Schedule -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" 
                                    Padding="16,12" Margin="4,2" Click="BtnSchedule_Click" Height="40">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Calendar" Width="20" Height="20" Margin="0,0,12,0"/>
                                    <TextBlock Text="Lịch học" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>

                            <!-- Certificates -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" 
                                    Padding="16,12" Margin="4,2" Click="BtnCertificates_Click" Height="41">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Certificate" Width="20" Height="20" Margin="0,0,12,0"/>
                                    <TextBlock Text="Chứng chỉ" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>

                            <!-- Payments -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" 
                                    Padding="16,12" Margin="4,2" Click="BtnPayments_Click" Height="40">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="CreditCard" Width="20" Height="20" Margin="0,0,12,0"/>
                                    <TextBlock Text="Thanh toán" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>

                            <!-- Feedback -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" 
                                    Padding="16,12" Margin="4,2" Click="BtnFeedback_Click" Height="40">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="MessageText" Width="20" Height="20" Margin="0,0,12,0"/>
                                    <TextBlock Text="Đánh giá khóa học" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>

                            <!-- Progress -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" 
                                    Padding="16,12" Margin="4,2" Click="BtnProgress_Click" Height="40">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="TrendingUp" Width="20" Height="20" Margin="0,0,12,0"/>
                                    <TextBlock Text="Tiến độ học tập" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>
                </materialDesign:Card>

                <!-- Content Area -->
                <materialDesign:Card Grid.Column="1" Margin="8,0,0,0" Padding="24" materialDesign:ElevationAssist.Elevation="Dp2">
                    <Grid x:Name="ContentArea">
                        <!-- Dashboard Content -->
                        <StackPanel x:Name="DashboardContent">
                            <TextBlock Text="Trang chủ" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,24"/>
                            
                            <!-- Quick Stats -->
                            <Grid Margin="0,0,0,24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Enrolled Courses -->
                                <materialDesign:Card Grid.Column="0" Margin="0,0,8,0" Padding="16" Background="{DynamicResource PrimaryHueLightBrush}">
                                    <StackPanel>
                                        <materialDesign:PackIcon Kind="BookOpen" Width="32" Height="32" HorizontalAlignment="Center" Foreground="White"/>
                                        <TextBlock x:Name="txtEnrolledCourses" Text="0" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White"/>
                                        <TextBlock Text="Khóa học đã đăng ký" HorizontalAlignment="Center" TextWrapping="Wrap" Foreground="White" FontSize="12"/>
                                    </StackPanel>
                                </materialDesign:Card>

                                <!-- Completed Assessments -->
                                <materialDesign:Card Grid.Column="1" Margin="4,0" Padding="16" Background="{DynamicResource SecondaryHueMidBrush}">
                                    <StackPanel>
                                        <materialDesign:PackIcon Kind="ClipboardCheck" Width="32" Height="32" HorizontalAlignment="Center" Foreground="White"/>
                                        <TextBlock x:Name="txtCompletedAssessments" Text="0" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White"/>
                                        <TextBlock Text="Bài kiểm tra hoàn thành" HorizontalAlignment="Center" TextWrapping="Wrap" Foreground="White" FontSize="12"/>
                                    </StackPanel>
                                </materialDesign:Card>

                                <!-- Certificates Earned -->
                                <materialDesign:Card Grid.Column="2" Margin="4,0" Padding="16" Background="#FF4CAF50">
                                    <StackPanel>
                                        <materialDesign:PackIcon Kind="Certificate" Width="32" Height="32" HorizontalAlignment="Center" Foreground="White"/>
                                        <TextBlock x:Name="txtCertificates" Text="0" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White"/>
                                        <TextBlock Text="Chứng chỉ đạt được" HorizontalAlignment="Center" TextWrapping="Wrap" Foreground="White" FontSize="12"/>
                                    </StackPanel>
                                </materialDesign:Card>

                                <!-- Overall Progress -->
                                <materialDesign:Card Grid.Column="3" Margin="8,0,0,0" Padding="16" Background="#FFFF9800">
                                    <StackPanel>
                                        <materialDesign:PackIcon Kind="TrendingUp" Width="32" Height="32" HorizontalAlignment="Center" Foreground="White"/>
                                        <TextBlock x:Name="txtOverallProgress" Text="0%" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White"/>
                                        <TextBlock Text="Tiến độ tổng thể" HorizontalAlignment="Center" TextWrapping="Wrap" Foreground="White" FontSize="12"/>
                                    </StackPanel>
                                </materialDesign:Card>
                            </Grid>

                            <!-- Recent Activities -->
                            <TextBlock Text="Hoạt động gần đây" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>
                            <materialDesign:Card Padding="16" Background="#FFF8F8F8">
                                <StackPanel x:Name="RecentActivities">
                                    <TextBlock Text="Chưa có hoạt động nào" FontStyle="Italic" Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Quick Actions -->
                            <TextBlock Text="Thao tác nhanh" FontSize="18" FontWeight="SemiBold" Margin="0,24,0,16"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,16,0" Click="BtnCourses_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="BookOpen" Width="16" Height="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Xem khóa học"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,16,0" Click="BtnMyEnrollments_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="BookAccount" Width="16" Height="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Khóa học của tôi"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,16,0" Click="BtnFeedback_Click" 
                                        Background="{DynamicResource SecondaryHueMidBrush}" BorderBrush="{DynamicResource SecondaryHueMidBrush}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Star" Width="16" Height="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Đánh giá khóa học"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource MaterialDesignRaisedButton}" Click="BtnProfile_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Account" Width="16" Height="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Cập nhật thông tin"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>

                        <!-- Other content panels will be loaded dynamically -->
                        <ContentControl x:Name="DynamicContent" Visibility="Collapsed"/>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- Status Bar -->
            <materialDesign:Card Grid.Row="2" Margin="0" Padding="16,8" materialDesign:ElevationAssist.Elevation="Dp1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="txtStatus" Text="Sẵn sàng" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" x:Name="txtDateTime" Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='dd/MM/yyyy HH:mm:ss'}" VerticalAlignment="Center"/>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </materialDesign:DialogHost>
</Window>