<Window x:Class="ProjectPRN.Student.Feedback.FeedbackDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Danh Gia Khoa Hoc" Height="700" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource WindowBackgroundBrush}">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Đánh giá và phản hồi" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,20"/>

        <!-- Course Information -->
        <Border Grid.Row="1" Background="{DynamicResource MaterialDesignPaper}" 
                BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1" 
                Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Thông tin khoá học" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Khoá học: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="CourseNameTextBlock" Text="Ten khoa hoc" Foreground="{DynamicResource InfoBrush}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Giảng viên: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="InstructorNameTextBlock" Text="Ten giang vien" Foreground="{DynamicResource InfoBrush}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Rating Section -->
        <Border Grid.Row="2" Background="{DynamicResource MaterialDesignPaper}" 
                BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1" 
                
                Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Đánh giá của bạn" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                <!-- Star Display -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock x:Name="Star1" Text="★" FontSize="30" Foreground="{DynamicResource WarningBrush}" Margin="2"/>
                    <TextBlock x:Name="Star2" Text="★" FontSize="30" Foreground="{DynamicResource WarningBrush}" Margin="2"/>
                    <TextBlock x:Name="Star3" Text="★" FontSize="30" Foreground="{DynamicResource WarningBrush}" Margin="2"/>
                    <TextBlock x:Name="Star4" Text="★" FontSize="30" Foreground="{DynamicResource WarningBrush}" Margin="2"/>
                    <TextBlock x:Name="Star5" Text="★" FontSize="30" Foreground="{DynamicResource WarningBrush}" Margin="2"/>
                </StackPanel>

                <!-- Rating ComboBox -->
                <ComboBox x:Name="RatingComboBox" Width="200" HorizontalAlignment="Left"
                          SelectionChanged="RatingComboBox_SelectionChanged">
                    <ComboBoxItem Content="1 Sao " Tag="1"/>
                    <ComboBoxItem Content="2 Sao " Tag="2"/>
                    <ComboBoxItem Content="3 Sao " Tag="3"/>
                    <ComboBoxItem Content="4 Sao " Tag="4"/>
                    <ComboBoxItem Content="5 Sao " Tag="5" IsSelected="True"/>
                </ComboBox>
            </StackPanel>
        </Border>

        <!-- Feedback Text -->
        <Border Grid.Row="3" Background="{DynamicResource MaterialDesignPaper}" 
                BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1" 
                Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Phản hồi của bạn" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <TextBlock Text="Chia sẻ trải nghiệm về khoá học này:" 
                           Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,5"/>
            </StackPanel>
        </Border>

        <!-- Feedback TextBox -->
        <Border Grid.Row="4" Background="{DynamicResource MaterialDesignPaper}" 
                BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1" 
                Padding="5" Margin="0,0,0,15">
            <TextBox x:Name="FeedbackTextBox" 
                     TextWrapping="Wrap" 
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     BorderThickness="0"
                     FontSize="14"
                     Padding="10"
                     Foreground="{DynamicResource PrimaryTextBrush}"
                     Background="{DynamicResource MaterialDesignPaper}"
                     Text="Nhập phản hồi của bạn..."/>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="CancelButton" Content="Huỷ" 
                    Background="{DynamicResource DisabledTextBrush}" Foreground="{DynamicResource MaterialDesignPaper}"
                    Click="CancelButton_Click"/>
            <Button x:Name="SubmitButton" Content="Gửi đánh giá" 
                    Background="{DynamicResource SuccessBrush}" Foreground="{DynamicResource MaterialDesignPaper}"
                    Click="SubmitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>