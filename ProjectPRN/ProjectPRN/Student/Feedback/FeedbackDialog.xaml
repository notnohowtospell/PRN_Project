<Window x:Class="ProjectPRN.Dialogs.FeedbackDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Course Feedback" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Course Feedback &amp; Rating" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Foreground="#2C3E50" Margin="0,0,0,20"/>

        <!-- Course Information -->
        <Border Grid.Row="1" Background="White" 
                BorderBrush="#BDC3C7" BorderThickness="1" 
                Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Course Information" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Course: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="CourseNameTextBlock" Text="Course Name" Foreground="#3498DB"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Instructor: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="InstructorNameTextBlock" Text="Instructor Name" Foreground="#3498DB"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Rating Section -->
        <Border Grid.Row="2" Background="White" 
                BorderBrush="#BDC3C7" BorderThickness="1" 
                Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Your Rating" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                <!-- Star Display -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock x:Name="Star1" Text="★" FontSize="30" Foreground="#F39C12" Margin="2"/>
                    <TextBlock x:Name="Star2" Text="★" FontSize="30" Foreground="#F39C12" Margin="2"/>
                    <TextBlock x:Name="Star3" Text="★" FontSize="30" Foreground="#F39C12" Margin="2"/>
                    <TextBlock x:Name="Star4" Text="★" FontSize="30" Foreground="#F39C12" Margin="2"/>
                    <TextBlock x:Name="Star5" Text="★" FontSize="30" Foreground="#F39C12" Margin="2"/>
                </StackPanel>

                <!-- Rating ComboBox -->
                <ComboBox x:Name="RatingComboBox" Width="200" HorizontalAlignment="Left"
                          SelectionChanged="RatingComboBox_SelectionChanged">
                    <ComboBoxItem Content="1 Star - Poor" Tag="1"/>
                    <ComboBoxItem Content="2 Stars - Fair" Tag="2"/>
                    <ComboBoxItem Content="3 Stars - Good" Tag="3"/>
                    <ComboBoxItem Content="4 Stars - Very Good" Tag="4"/>
                    <ComboBoxItem Content="5 Stars - Excellent" Tag="5" IsSelected="True"/>
                </ComboBox>
            </StackPanel>
        </Border>

        <!-- Feedback Text -->
        <Border Grid.Row="3" Background="White" 
                BorderBrush="#BDC3C7" BorderThickness="1" 
                Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Your Feedback" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <TextBlock Text="Please share your experience with this course:" 
                           Foreground="#7F8C8D" Margin="0,0,0,5"/>
            </StackPanel>
        </Border>

        <!-- Feedback TextBox -->
        <Border Grid.Row="4" Background="White" 
                BorderBrush="#BDC3C7" BorderThickness="1" 
                Padding="5" Margin="0,0,0,15">
            <TextBox x:Name="FeedbackTextBox" 
                     TextWrapping="Wrap" 
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     BorderThickness="0"
                     FontSize="14"
                     Padding="10"
                     Text="Enter your detailed feedback here..."/>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="CancelButton" Content="Cancel" 
                    Background="#95A5A6" Foreground="White"
                    Click="CancelButton_Click"/>
            <Button x:Name="SubmitButton" Content="Submit Feedback" 
                    Background="#27AE60" Foreground="White"
                    Click="SubmitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>