<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Colors -->
    <Color x:Key="PrimaryColor">#FF2196F3</Color>
    <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="#FF1976D2"/>

    <!-- Secondary Colors -->
    <SolidColorBrush x:Key="SecondaryHueLightBrush" Color="#FFFFB74D"/>
    <SolidColorBrush x:Key="SecondaryHueMidBrush" Color="#FFFF9800"/>
    <SolidColorBrush x:Key="SecondaryHueDarkBrush" Color="#FFF57C00"/>

    <!-- Material Design Core Brushes -->
    <SolidColorBrush x:Key="MaterialDesignPaper" Color="#FFFAFAFA"/>
    <SolidColorBrush x:Key="MaterialDesignCardBackground" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="MaterialDesignToolBarBackground" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="MaterialDesignBody" Color="#DD000000"/>
    <SolidColorBrush x:Key="MaterialDesignBodyLight" Color="#89000000"/>
    <SolidColorBrush x:Key="MaterialDesignColumnHeader" Color="#BC000000"/>
    <SolidColorBrush x:Key="MaterialDesignCheckBoxOff" Color="#89000000"/>
    <SolidColorBrush x:Key="MaterialDesignCheckBoxDisabled" Color="#FFBDBDBD"/>
    <SolidColorBrush x:Key="MaterialDesignTextBoxBorder" Color="#89000000"/>
    <SolidColorBrush x:Key="MaterialDesignDivider" Color="#1F000000"/>
    <SolidColorBrush x:Key="MaterialDesignSelection" Color="#FFDEDEDE"/>

    <!-- Custom Application Brushes -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFAFAFA"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="NavigationBackgroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#FFFFFFFF"/>

    <!-- Text Brushes -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#DD000000"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#89000000"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#61000000"/>
    <SolidColorBrush x:Key="HintTextBrush" Color="#61000000"/>

    <!-- Button and Interactive Element Brushes -->
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#1A2196F3"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#332196F3"/>
    <SolidColorBrush x:Key="NavigationSelectedBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="NavigationHoverBrush" Color="#1A2196F3"/>

    <!-- ORIGINAL COLORS PRESERVED -->
    <!-- These maintain your original color scheme -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#FF4CAF50"/>
    <!-- Original green -->
    <SolidColorBrush x:Key="WarningBrush" Color="#FFFF9800"/>
    <!-- Original orange -->
    <SolidColorBrush x:Key="ErrorBrush" Color="#FFF44336"/>
    <!-- Original red -->
    <SolidColorBrush x:Key="InfoBrush" Color="#FF2196F3"/>
    <!-- Original blue -->
    <SolidColorBrush x:Key="PurpleBrush" Color="#FF9C27B0"/>
    <!-- Original purple -->

    <!-- Additional Original Colors -->
    <SolidColorBrush x:Key="CompletedBrush" Color="#FF4CAF50"/>
    <!-- Green for completed -->
    <SolidColorBrush x:Key="InProgressBrush" Color="#FFFF9800"/>
    <!-- Orange for in progress -->
    <SolidColorBrush x:Key="OverallProgressBrush" Color="#FF9C27B0"/>
    <!-- Purple for overall progress -->
    <SolidColorBrush x:Key="EnrolledBrush" Color="#FF2196F3"/>
    <!-- Blue for enrolled -->

    <!-- Border and Outline Brushes -->
    <SolidColorBrush x:Key="BorderBrush" Color="#1F000000"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="{StaticResource PrimaryColor}"/>

</ResourceDictionary>