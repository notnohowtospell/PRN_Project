<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Colors -->
    <Color x:Key="PrimaryColor">#FF2196F3</Color>
    <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="#FF1976D2"/>

    <!-- Secondary Colors -->
    <SolidColorBrush x:Key="SecondaryHueLightBrush" Color="#FFFFB74D"/>
    <SolidColorBrush x:Key="SecondaryHueMidBrush" Color="#FFFF9800"/>
    <SolidColorBrush x:Key="SecondaryHueDarkBrush" Color="#FFF57C00"/>

    <!-- Material Design Core Brushes (Soothing Dark Theme) -->
    <SolidColorBrush x:Key="MaterialDesignPaper" Color="#FF1A1A1B"/>
    <SolidColorBrush x:Key="MaterialDesignCardBackground" Color="#FF242426"/>
    <SolidColorBrush x:Key="MaterialDesignToolBarBackground" Color="#FF2D2D30"/>
    <SolidColorBrush x:Key="MaterialDesignBody" Color="#FFE8E8E8"/>
    <SolidColorBrush x:Key="MaterialDesignBodyLight" Color="#FFB8B8B8"/>
    <SolidColorBrush x:Key="MaterialDesignColumnHeader" Color="#BCFFFFFF"/>
    <SolidColorBrush x:Key="MaterialDesignCheckBoxOff" Color="#89FFFFFF"/>
    <SolidColorBrush x:Key="MaterialDesignCheckBoxDisabled" Color="#FF424242"/>
    <SolidColorBrush x:Key="MaterialDesignTextBoxBorder" Color="#89FFFFFF"/>
    <SolidColorBrush x:Key="MaterialDesignDivider" Color="#1FFFFFFF"/>
    <SolidColorBrush x:Key="MaterialDesignSelection" Color="#FF3A3A3C"/>

    <!-- Custom Application Brushes (Soothing Dark Theme) -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FF1A1A1B"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#FF242426"/>
    <SolidColorBrush x:Key="NavigationBackgroundBrush" Color="#FF242426"/>
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="#FF242426"/>
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#FF242426"/>

    <!-- Text Brushes (Softer whites for better readability) -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFE8E8E8"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#FFB8B8B8"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#FF888888"/>
    <SolidColorBrush x:Key="HintTextBrush" Color="#FF888888"/>

    <!-- Button and Interactive Element Brushes -->
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#1A2196F3"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#332196F3"/>
    <SolidColorBrush x:Key="NavigationSelectedBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="NavigationHoverBrush" Color="#1A2196F3"/>

    <!-- ORIGINAL COLORS PRESERVED (Same as light theme) -->
    <!-- These maintain your original color scheme in dark theme too -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#FF4CAF50"/>
    <!-- Original green -->
    <SolidColorBrush x:Key="WarningBrush" Color="#FFFF9800"/>
    <!-- Original orange -->
    <SolidColorBrush x:Key="ErrorBrush" Color="#FFF44336"/>
    <!-- Original red -->
    <SolidColorBrush x:Key="InfoBrush" Color="#FF2196F3"/>
    <!-- Original blue -->
    <SolidColorBrush x:Key="PurpleBrush" Color="#FF9C27B0"/>
    <!-- Original purple -->

    <!-- Additional Original Colors -->
    <SolidColorBrush x:Key="CompletedBrush" Color="#FF4CAF50"/>
    <!-- Green for completed -->
    <SolidColorBrush x:Key="InProgressBrush" Color="#FFFF9800"/>
    <!-- Orange for in progress -->
    <SolidColorBrush x:Key="OverallProgressBrush" Color="#FF9C27B0"/>
    <!-- Purple for overall progress -->
    <SolidColorBrush x:Key="EnrolledBrush" Color="#FF2196F3"/>
    <!-- Blue for enrolled -->

    <!-- Border and Outline Brushes (Dark Theme) -->
    <SolidColorBrush x:Key="BorderBrush" Color="#1FFFFFFF"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="{StaticResource PrimaryColor}"/>

</ResourceDictionary>