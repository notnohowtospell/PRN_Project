<Window x:Class="ProjectPRN.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ProjectPRN"
        mc:Ignorable="d"
        Title="Login" 
        Height="700" Width="550"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <Window.Resources>
        <Style x:Key="WelcomeTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        
        <Style x:Key="SubtitleTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#7F8C8D"/>
            <Setter Property="Margin" Value="0,0,0,40"/>
        </Style>
        
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="Height" Value="56"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="materialDesign:HintAssist.Background" Value="Transparent"/>
        </Style>
        
        <Style x:Key="ModernPasswordBoxStyle" TargetType="PasswordBox" BasedOn="{StaticResource MaterialDesignOutlinedPasswordBox}">
            <Setter Property="Height" Value="56"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="materialDesign:HintAssist.Background" Value="Transparent"/>
        </Style>
    </Window.Resources>
    
    <!-- Remove border and use direct background -->
    <Grid Background="White" Margin="0,0,0,-93">
        <Grid Margin="40" Width="350">
            <StackPanel VerticalAlignment="Top" Margin="0,46,0,0">
                <!-- Close Button -->
                <Button HorizontalAlignment="Right" 
                        VerticalAlignment="Top"
                        Margin="0,-60,0,0"
                        Style="{StaticResource MaterialDesignIconButton}"
                        Width="40" Height="40"
                        Click="CloseButton_Click">
                    <materialDesign:PackIcon Kind="Close" Width="24" Height="24" Foreground="#6C757D"/>
                </Button>
                
                <!-- App Icon -->
                <materialDesign:PackIcon Kind="SchoolOutline" 
                                       Width="80" Height="80" 
                                       HorizontalAlignment="Center"
                                       Foreground="{DynamicResource PrimaryHueMidBrush}"
                                       Margin="0,0,0,30"/>
                
                <!-- Login Header -->
                <TextBlock Text="Welcome Back!" 
                          Style="{StaticResource WelcomeTextStyle}"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Please sign in to your account" 
                          Style="{StaticResource SubtitleTextStyle}"
                          HorizontalAlignment="Center"/>
                
                <!-- Login Form -->
                <StackPanel>
                    <!-- Email Field -->
                    <TextBox x:Name="EmailTextBox"
                            Style="{StaticResource ModernTextBoxStyle}"
                            materialDesign:HintAssist.Hint="Email Address"
                            materialDesign:HintAssist.FloatingScale="0.75"/>
                    
                    <!-- Password Field -->
                    <PasswordBox x:Name="PasswordBox"
                                Style="{StaticResource ModernPasswordBoxStyle}"
                                materialDesign:HintAssist.Hint="Password"
                                materialDesign:HintAssist.FloatingScale="0.75"/>
                    
                    <!-- Remember Me & Forgot Password -->
                    <Grid Margin="0,0,0,30">
                        <CheckBox x:Name="RememberMeCheckBox" 
                                 Content="Remember me"
                                 FontSize="14"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"
                                 Checked="RememberMeCheckBox_CheckedChanged"
                                 Unchecked="RememberMeCheckBox_CheckedChanged"/>
                        
                        <Button Content="Forgot Password?"
                               Style="{StaticResource MaterialDesignFlatButton}"
                               FontSize="14"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource PrimaryHueMidBrush}"
                               Click="ForgotPassword_Click"/>
                    </Grid>
                    
                    <!-- Login Button -->
                    <Button x:Name="LoginButton"
                           Content="SIGN IN"
                           Height="56"
                           FontSize="16"
                           FontWeight="Medium"
                           Margin="0,0,0,30"
                           Style="{StaticResource MaterialDesignRaisedButton}"
                           materialDesign:ButtonAssist.CornerRadius="8"
                           Click="LoginButton_Click">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#667eea" Offset="0"/>
                                <GradientStop Color="#764ba2" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    
                    <!-- Sign Up Link -->
                    <TextBlock HorizontalAlignment="Center" 
                              Margin="0,0,0,0"
                              FontSize="14">
                        <Run Text="Don't have an account?" Foreground="#7F8C8D"/>
                        <Hyperlink Foreground="{DynamicResource PrimaryHueMidBrush}" 
                                  Click="SignUp_Click"
                                  TextDecorations="None">
                            <Run Text="Sign up" FontWeight="Medium"/>
                        </Hyperlink>
                    </TextBlock>
                    
                    <!-- Dev Tools (Hidden by default) -->
                    <StackPanel x:Name="DevToolsPanel" 
                               Visibility="Visible"
                               Margin="0,20,0,0">
                        <Button Content="[DEV] Admin Login Test"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               FontSize="12"
                               Height="35"
                               Margin="0,5"
                               Foreground="Red"
                               BorderBrush="Red"
                               Click="AdminLoginTest_Click"/>
 
                        
                        <Button Content="[DEV] Demo Credentials"
                               Visibility="Collapsed"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               FontSize="12"
                               Height="35"
                               Margin="0,5"
                               Foreground="Gray"
                               BorderBrush="Gray"
                               Click="DemoCredentials_Click"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
